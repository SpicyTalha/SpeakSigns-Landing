doctype html
html(lang='en')

    head

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='')
        meta(name='author', content='')

        title Silent Speech

        link(rel='icon', type='image/x-icon', href='assets/img/ic_launcher_round.png')

        // Bootstrap icons
        link(href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css', rel='stylesheet')

        // Google fonts
        link(rel='preconnect', href='https://fonts.gstatic.com')
        link(href='https://fonts.googleapis.com/css2?family=Newsreader:ital,wght@0,600;1,600&display=swap', rel='stylesheet')
        link(href='https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,300;0,500;0,600;0,700;1,300;1,500;1,600;1,700&display=swap', rel='stylesheet')
        link(href='https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,400;1,400&display=swap', rel='stylesheet')

        // Core theme CSS (includes Bootstrap)
        link(href='css/styles.css', rel='stylesheet')

    body#page-top(style='color: white;')
    

        // Navigation
        nav#mainNav.navbar.navbar-expand-lg.navbar-light.fixed-top.shadow-sm
            a.navbar-brand.fw-bold(href='#page-top')
            img(src='assets/img/ic_launcher_round.png', alt='Silent Speech Logo', class='logo-img' , style='height: 3rem;') 
            | 
            strong(style='font-size: 1.5rem; margin-left: 10px;') Silent Speech
            button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
                | Menu
                i.bi-list
            #navbarResponsive.collapse.navbar-collapse
                ul.navbar-nav.ms-auto.me-4.my-3.my-lg-0
                    li.nav-item
                        a.nav-link.me-lg-3(href='#features',style = 'color: white;') Features
                    li.nav-item
                        a.nav-link.me-lg-3(href='#download',,style = 'color: white;') Download
                
                    

        // Mashead header
        header.masthead
            .container.px-5
                .row.gx-5.align-items-center
                    .col-lg-6
                        // Mashead text and app badges
                        .mb-5.mb-lg-0.text-center.text-lg-start
                            h1.display-1.lh-1.mb-3 Silent Speech
                            p.lead.fw-normal.text-muted.mb-5 An android application using ML to interpret sign language to text from live feed, videos, and images
                            .d-flex.flex-column.flex-lg-row.align-items-center
                                //- a.me-lg-3.mb-4.mb-lg-0(href='#!')
                                //-     img.app-badge(src='assets/img/google-play-badge.svg', alt='...')
                                //- a(href='#!')
                                //-     img.app-badge(src='assets/img/app-store-badge.svg', alt='...')
                    .col-lg-6
                        // Masthead device mockup feature
                        .masthead-device-mockup
                            include includes/gradient-circle
                            include includes/shape-1
                            include includes/shape-2
                            .device-wrapper
                                .device(data-device='iPhoneX', data-orientation='portrait', data-color='black')
                                    .screen.bg-black
                                        // PUT CONTENTS HERE:
                                        // * * This can be a video, image, or just about anything else.
                                        // * * Set the max width of your media to 100% and the height to
                                        // * * 100% like the demo example below.
                                        video(muted='muted', autoplay='', loop='', style='max-width: 100%; height: 100%;')
                                            source(src='assets/img/demo.mp4', type='video/mp4')

        // Quote/testimonial aside
        aside.text-center.bg-gradient-primary-to-secondary
            .container.px-5
                .row.gx-5.justify-content-center
                    .col-xl-8
                        .h2.fs-1.text-white.mb-4 "An intuitive solution to a common problem faced by many, wrapped up in a single app!"
                        img(src='assets/img/ic_launcher_round.png', alt='...', style='height: 5rem;')

        // App features section
        section.features#features
            .container.px-5
                .row.gx-5.align-items-center
                    .col-lg-8.order-lg-1.mb-5.mb-lg-0
                        .container-fluid.px-5
                            .row.gx-5
                                .col-md-6.mb-5
                                    // Feature item
                                    .text-center
                                        i.bi-phone.icon-feature.text-gradient.d-block.mb-3
                                        h3.font-alt Real-Time Interpretation
                                        p.text-muted.mb-0 Experience instant sign language interpretation, allowing smooth communication in various situations
                                .col-md-6.mb-5
                                    // Feature item
                                    .text-center
                                        i.bi-camera.icon-feature.text-gradient.d-block.mb-3
                                        h3.font-alt Flexible Use
                                        p.text-muted.mb-0 Put an image, video, or live camera footage in the screen!
                            .row
                                .col-md-6.mb-5.mb-md-0
                                    // Feature item
                                    .text-center
                                        i.bi-gift.icon-feature.text-gradient.d-block.mb-3
                                        h3.font-alt Easily Accessible
                                        p.text-muted.mb-0 The Android App is free to download and use!
                                .col-md-6
                                    // Feature item
                                    .text-center
                                        i.bi-patch-check.icon-feature.text-gradient.d-block.mb-3
                                        h3.font-alt Open Source
                                        p.text-muted.mb-0 Since this App is MIT licensed, you can use it commercially!
                    .col-lg-4.order-lg-0
                        // Features section device mockup
                        .features-device-mockup
                            include includes/gradient-circle
                            include includes/shape-1
                            include includes/shape-2
                            .device-wrapper
                                .device(data-device='iPhoneX', data-orientation='portrait', data-color='black')
                                    .screen.bg-black
                                        // PUT CONTENTS HERE:
                                        // * * This can be a video, image, or just about anything else.
                                        // * * Set the max width of your media to 100% and the height to
                                        // * * 100% like the demo example below.
                                        video(muted='muted', autoplay='', loop='', style='max-width: 100%; height: 100%;')
                                            source(src='assets/img/demo.mp4', type='video/mp4')
                                .col-1.col-lg-1
                                    a.me-lg-3.mb-4.mb-lg-0(href='https://youtu.be/89vHN1Qw5IU', target='_blank')
                                        img.app-badge(src='assets/img/yt.png', alt='...', style = 'margin-top: 10px; margin-left: 50px;')
                                            

        // Basic features section
        section.features-secondary
            .container.px-5
                .row.gx-5.align-items-center.justify-content-center.justify-content-lg-between
                    .col-12.col-lg-6
                        h2.display-4.lh-1.mb-4 Extensive Recognition Capabilities 
                        p.lead.fw-normal.text-muted.mb-5.mb-lg-0 Model trained on a extensive dataset of over 50 gestures, and over 70,000 samples, including Alphabets, Numbers, and common signs in the American Sign Language. Datasets used include.
                            a(href='https://github.com/hukenovs/hagrid', target='_blank') Hagrid dataset, 
                            a(href='https://www.kaggle.com/datasets/ruslanbredun/sign-language-eng-alphabet', target='_blank') ASL Alpahbets
                            |, and
                            a(href='https://www.kaggle.com/datasets/rayeed045/american-sign-language-digit-dataset', target='_blank') ASL Digits.
                    .col-sm-8.col-md-6
                        .px-5.px-sm-0
                             img.img-fluid.square-image(src='assets/img/hagrid.jpg', alt='...')

                    


        // App badge section
        section#download.bg-gradient-primary-to-secondary
            .container.px-5
                h2.text-center.text-white.font-alt.mb-4 Get the app now!
                .d-flex.flex-column.flex-lg-row.align-items-center.justify-content-center
                    a.me-lg-3.mb-4.mb-lg-0(href='https://github.com/silent-speech/silent-speech.git', target='_blank')
                        img.app-badge(src='assets/img/github.png', alt='...', style='height: 6rem;')
                    

        // Footer
        footer.bg-black.text-center.py-5
            .container.px-5
                .text-white-50.small
                    .mb-2 &copy; Silent Speech 2023. All Rights Reserved.
        
        include includes/feedback-modal.pug

        // Bootstrap core JS
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js')

        // Core theme JS
        script(src='js/scripts.js')

